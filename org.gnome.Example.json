{
    "id" : "com.farthergate.serenity.Example",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "serenity-example-launcher",
    "finish-args" : [
  	"--socket=wayland",
  	"--socket=fallback-x11",
  	"--share=ipc",
  	"--device=dri",
  	"--socket=pulseaudio"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
    	    "name": "catch2",
    	    "builddir": true,
    	    "buildsystem": "meson",
    	    "sources": [
    	        {
    	            "type": "git",
    	            "url": "https://github.com/catchorg/Catch2.git",
    	            "tag": "v3.11.0"
    	        }
    	    ]
    	},
	{
	    "name": "SDL",
	    "builddir": true,
	    "buildsystem": "cmake",
	    "sources": [
	        {
	            "type": "git",
	            "url": "https://github.com/libsdl-org/SDL.git",
	            "tag": "release-3.2.28"
	        }
            ]
        },
        {
	    "name": "SDL_ttf",
	    "builddir": true,
	    "buildsystem": "cmake",
	    "sources": [
	        {
	            "type": "git",
	            "url": "https://github.com/libsdl-org/SDL_ttf.git",
	            "tag": "release-3.2.2"
	        }
            ]
        },
        {
	    "name": "SDL_image",
	    "builddir": true,
	    "buildsystem": "cmake",
	    "sources": [
	        {
	            "type": "git",
	            "url": "https://github.com/libsdl-org/SDL_image.git",
	            "tag": "release-3.2.4"
	        }
            ]
        },
        {
            "name" : "sup",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://git.sr.ht/~aleksrutins/sup"
                }
            ]
        },
        {
            "name" : "serenity",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/aleks/Projects"
                }
            ]
        }
    ]
}
